<% layout("/layouts/boilerplate") %>
    
<style>
    /* --- SHARED & DESKTOP STYLES (Keep yours as is) --- */
    #filters { 
        display: flex; 
        align-items: center; 
        padding: 1rem 0; 
    }
    .filter-container { 
        display: flex; 
        align-items: center; 
        flex-grow: 1; 
    }
    .filter { 
        text-align: center; 
        margin-right: 2rem; 
        opacity: 0.7; 
        flex: 0 0 auto; 
    }
    .tax-info { 
        display: none; 
    }
    
    /* Desktop Toggle Style */
    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }

    /* --- MOBILE ONLY STYLES --- */
    @media (max-width: 768px) {
        /* 1. Navbar: Keep it single row, hide the redundant link */
        .nav-airbnb-home { display: none !important; } 

        #filters {
            position: sticky;
            top: 66px; 
            z-index: 1000;
            background: white;
            display: block; /* Change to block to stack icons above the controls */
            padding: 0.5rem 10px;
            border-bottom: 1px solid #eee;
        }

        /* 2. Icons Row */
        .filter-container {
            display: flex;
            overflow-x: auto;
            white-space: nowrap;
            scrollbar-width: none;
            margin-bottom: 10px;
        }
        .filter-container::-webkit-scrollbar { display: none; }
        .filter { margin-right: 1.2rem; margin-top: 0; }
        .filter p { font-size: 0.65rem; }

        /* 3. New Controls Row (Airbnb Link + Toggle side by side) */
        .mobile-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            padding-top: 5px;
        }

        .mobile-airbnb-btn {
            border: 1px solid #ccc;
            border-radius: 50px;
            padding: 5px 15px;
            font-size: 0.75rem;
            color: #222;
            text-decoration: none;
            white-space: nowrap;
        }

        .tax-toggle {
            margin: 0;
            border: 1px solid #ccc;
            border-radius: 50px;
            height: 2.2rem;
            padding: 0 10px;
            font-size: 0.7rem;
            flex-grow: 1;
            justify-content: center;
        }
        
        .form-check-label { margin-right: 5px; }

        /* 4. Grid Adjustment */
        .card-img-top { height: 11rem !important; border-radius: 1rem !important; }
    }
</style>

    <div id="filters">
        <div class="filter-container">
            <div class="filter">
                <div><a href="listings/filter/Trending" class="category-link"><i class="fa-solid fa-fire"></i></a></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Rooms" class="category-link"><i class="fa-solid fa-bed"></i></a></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Iconic Cities" class="category-link"><i class="fa-solid fa-mountain-city"></i></a></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Mountains" class="category-link"><i class="fa-solid fa-mountain"></i></a></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Castles" class="category-link"><i class="fa-brands fa-fort-awesome"></i></a></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Amazing Pools" class="category-link"><i class="fa-solid fa-person-swimming"></i></a></div>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Camping" class="category-link"><i class="fa-solid fa-campground"></i></a></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Farms" class="category-link"><i class="fa-solid fa-cow"></i></a></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Arctic" class="category-link"><i class="fa-solid fa-snowflake"></i></a></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Domes" class="category-link"><i class="fa-solid fa-igloo"></i></a></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div><a href="listings/filter/Boats" class="category-link"><i class="fa-solid fa-ship"></i></a></div>
                <p>Boats</p>
            </div>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
        </div>
    </div>

<div class="container d-md-none text-center my-2">
    <a href="/listings/add" class="btn btn-outline-dark btn-sm rounded-pill">Airbnb your home</a>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-2 mt-3">
    <% for(let list of allListings) { %>
    <a href="/listings/<%= list._id %>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
            <div class="card-img-overlay" ></div>
                <div class="card-body">
                    <p class="card-text">
                    <b><%= list.title %></b>
                    <br>
                    &#8377; <%= list.price?list.price.toLocaleString("en-IN"): "N/A" %> / night
                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    </p>
            </div>
        </div>
    </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            }else {
                info.style.display = "none";
            }
        }
    })
</script>