<style>
    /* --- DESKTOP STYLES --- */
    #filters {
        display: flex;
        align-items: center;
        padding: 1rem 0;
    }

    .filter-container {
        display: flex;
        align-items: center;
        flex-grow: 1;
        overflow-x: auto;
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        opacity: 0.7;
        flex: 0 0 auto;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
        white-space: nowrap;
    }

    .tax-info {
        display: none;
    }

    /* --- MOBILE STYLES (Max-width: 768px) --- */
    @media (max-width: 768px) {
        /* Align Button and Toggle side-by-side */
        .mobile-action-bar {
            display: flex !important;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            padding: 0 5px;
        }

        .tax-toggle-mobile {
            border: 1px solid #ccc;
            border-radius: 2rem;
            padding: 0.4rem 0.8rem;
            background: white;
            white-space: nowrap;
        }

        .tax-toggle-mobile label {
            font-size: 0.7rem;
            margin-bottom: 0;
        }

        /* Adjust icon spacing for mobile */
        .filter {
            margin-right: 1.2rem;
        }

        .filter p {
            font-size: 0.65rem;
        }
    }
</style>

