<div class="row row-cols-lg-3 row-cols-md-2 row-cols-2 mt-3">
    <% for(let list of catListings) { %>
    <a href="/listings/<%= list._id %>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
            <div class="card-img-overlay" ></div>
                <div class="card-body">
                    <p class="card-text">
                    <b><%= list.title %></b>
                    <br>
                    &#8377; <%= list.price?list.price.toLocaleString("en-IN"): "N/A" %> / night
                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    </p>
            </div>
        </div>
    </a>
    <% } %>
</div>

<script>
    // 1. Select all checkboxes (both the desktop one and the mobile one)
    let taxSwitches = document.querySelectorAll(".tax-switch-input");
    
    // 2. Select all the tax info elements inside the listing cards
    let taxInfo = document.getElementsByClassName("tax-info");

    taxSwitches.forEach(sw => {
        sw.addEventListener("change", (event) => {
            let isChecked = event.target.checked;
            taxSwitches.forEach(s => s.checked = isChecked);

            for (let info of taxInfo) {
                if (isChecked) {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    });
</script>