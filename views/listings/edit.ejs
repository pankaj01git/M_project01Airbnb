<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>edit ypur listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <lable for="title" class="form-level" >Title</lable>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-level" >Description</lable>
            <textarea name="listing[description]" <%= listing.description %> class="form-control" required></textarea>
            <div class="invalid-feedback">please enter a short description</div>
        </div>
        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%= originalImageUrl %>"/>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-level" >Upload New Image</lable>
            <input name="listing[image]" type="file" class="form-control"/>
            <div class="invalid-feedback">please enter a vilid link</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-level" >Price</lable>
            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
            <div class="invalid-feedback">please enter a valid price</div>
        </div>
        <div class="mb-3 clo-md-8">
            <lable for="country" class="form-level" >Country</lable>
            <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required/>
            <div class="invalid-feedback">please enter a valid country</div>
        </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-level" >Location</lable>
            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/>
            <div class="invalid-feedback">please enter a vilid location</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">edit</button>

    </form>
    </div>
</div>