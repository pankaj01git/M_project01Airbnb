<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    border: none;
    height: 50px;
    width: 120px;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
    opacity: 0.9;
  }
  .search-input {
    border-radius: 25px;
  }
  .search-btn {
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .navbar > .container-fluid {
      display: flex !important;
      flex-wrap: nowrap !important;
      justify-content: space-between;
      align-items: center;
      padding: 0 10px;
    }

    /* Hide the hamburger icon and search button text */
    .navbar-toggler, .search-btn span {
      display: none !important;
    }

    .collapse.navbar-collapse {
      display: flex !important;
      flex-basis: auto;
      flex-grow: 1;
      flex-direction: row !important;
      align-items: center;
    }

    /* Google-style Pill Search Bar */
    .search-container {
      background: #f1f3f4;
      border-radius: 50px;
      flex-grow: 1;
      margin: 0 8px !important;
      padding: 2px 8px;
      max-width: 180px;
      border: 1px solid #ddd;
    }

    .search-input {
      border: none !important;
      background: transparent !important;
      padding: 2px 5px !important;
      font-size: 0.8rem;
    }

    .search-btn {
      background: transparent !important;
      color: #5f6368 !important;
      width: auto !important;
      padding: 0 !important;
    }

    .navbar-nav {
      flex-direction: row !important;
      gap: 10px;
    }

    .nav-link {
      font-size: 0.8rem !important;
      padding: 0 !important;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-white border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    
    <div class="collapse navbar-collapse show" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="search-container ms-auto me-auto">
        <form class="d-flex" role="search" method="GET" action="/listings">
          <input class="form-control search-input" name="search" type="search" placeholder="Search destinations" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
            <span>Search</span>
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link d-none d-md-inline" href="/listings/add">Airbnb your home</a>
        
        <% if(!currUser){ %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>